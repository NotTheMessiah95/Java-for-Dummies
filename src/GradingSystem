    private void btnSubmitActionPerformed(java.awt.event.ActionEvent evt) {                                          
        
        if(!txtName.getText().equals("") && !txtResult.getText().equals(""))
        {
            lblOutput.setText("");
            String name = txtName.getText();
            int result = Integer.parseInt(txtResult.getText());
            if(result>=0 & result<=100)
            {    
                if(result >=70)
                {
                    lblOutput.setText(name+" achieved an A grade!");
                }
                else if(result >= 60)
                {
                    lblOutput.setText(name+" achieved a B grade!");
                }
                else if(result >=50)
                {
                    lblOutput.setText(name+" achieved a C grade!");
                }
                else
                {
                    lblOutput.setText(name+" failed the exam :(");
                }
                btnSubmit.setEnabled(false);
            }
            else
            {
                lblOutput.setText("You have entered an invalid result.");
                txtResult.setText("");
            }
        }
        else
        {
            lblOutput.setText("Please enter a name and a result");
        }
    }                                         

    private void btnResetActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        btnSubmit.setEnabled(true);
        lblOutput.setText("");
        txtResult.setText("");
        txtName.setText("");
    }                                        

