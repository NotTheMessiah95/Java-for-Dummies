    private void btnSubmitTextActionPerformed(java.awt.event.ActionEvent evt) {                                              

        String existingText = lblOutput.getText();
        String textEntered = txtInput.getText();
        lblOutput.setText(existingText +" "+ textEntered);
        txtInput.setText("");
        
    }                                             

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        lblOutput.setText("");
    }                                        
            
